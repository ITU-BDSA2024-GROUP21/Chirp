<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/faviconical.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/icon2.png" alt="Icon2"/>Twitter</h1>
    <partial name="_LoginPartial" />

    <div class=body>
        @RenderBody() 
    </div>
    <div>
        @{
        //Method to parse the current page from the query string, and by default set to 1 incase it isn't valid
            int currPage;
            if (!int.TryParse(Context.Request.Query["page"], out currPage))
            {
                currPage = 1; // Default to 1 if parsing fails
            }
                int nextPage = currPage + 1; // Calculating the next page
        }
        <a href="/?page=@nextPage" style="float: right;">Next page</a> 
        @{
        //Method to parse the current page from the query string, and by default set to 1 incase it isn't valid
            int prevPage = currPage - 1; // Calculating the previous page
        }
        <a href="/?page=@prevPage">Previous page</a> 
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>


</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
