@using Chirp.Web
@using Microsoft.AspNetCore.Identity

@model NootBoxModel

@if (User.Identity.IsAuthenticated)
{
    <head>
        <link href="~/css/style.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
    <div class="biobox">
        <h4> Edit Your Bio </h4>
        <form asp-page="post" method="post">
            <div asp-validation-summary="All"></div>
            <input style="float: left; margin-bottom: 20px;margin-right: 5px; width: 50%; height: 30px" type="text" asp-for="Text" class="form-control" >
            <span asp-validation-for="Text"></span>
            <input type="submit" value="Save" style="height: 35px">
        </form>
    </div>
    </body>
}